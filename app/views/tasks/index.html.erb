<h1>Tasks:</h1>

<h3><%= link_to "ADD A TASK", new_task_path %></h3>

<hr>

<% @tasks.each do |task| %>
  <h3><%= task.name %></h3>
  <ul>
    <li>Created at: <%= task.created_at %></li>
    <li>Updated at:<%= task.updated_at %></li>
  </ul>
  <p><%= link_to "Edit", edit_task_path(task) %></p>
  <p><%= link_to "Delete", task_path(task), method: :delete %></p>
  <hr>

<% end %>



